@{
    ViewData["Title"] = "剪輯";

    var videos = new[]
    {
        new { Title = "友你",Detail = "一個關於友情的小故事", File = "1.mp4", Type = "影片" },
        new { Title = "想吃啥啥沒有-金門",Detail = "在金門的旅遊紀錄", File = "2.mp4", Type = "影片" },
        new { Title = "是我沒去到的日本",Detail = "家人的日本遊紀錄", File = "3.mp4", Type = "影片" },
        new { Title = "日本合集返場",Detail = "旅遊後就是想發朋友圈", File = "4.mp4", Type = "影片" },
        new { Title = "動畫概論期末",Detail = "一部汽車的命運", File = "5.mp4", Type = "動畫" },
        new { Title = "盂蘭盆節英文介紹",Detail = "來淺談一下盂蘭盆節吧", File = "6.mp4", Type = "動畫" },
    };
}

<div class="container mt-2 mb-2">
    <div class="row">
        <div class="col-12">
            <div class="box text-center p-4">
                <h1 style="color:#afd6f0">嗨，我是企鵝!</h1>
                <h3>下面是我剪輯的影片。</h3>
                <marquee height="40" scrollamount="10"><font size="4" color="#d9d7db">歡迎看看~ 看好看滿~ 每一部都是爆肝警告~</font></marquee>
                @foreach (var group in videos.GroupBy(v => v.Type))
                {
                    <div class="mt-5">
                        <h2 class="text-center fw-bold mb-3" style="color: #f6e2ff;">@group.Key</h2>
                        <div class="row justify-content-center ">
                            @foreach (var video in group)
                            {
                                <div class="col-12 col-md-6 mb-4">
                                    <div class="card video-card text-white border-0 h-100">
                                        <div class="ratio ratio-16x9">
                                            <video class="rounded-top" controls>
                                                <source src="~/images/@video.File" type="video/mp4" />
                                                Your browser does not support the video tag.
                                            </video>
                                        </div>
                                        <div class="card-body">
                                            <h5 class="card-title">@video.Title</h5>
                                            <p class="card-text mt-3 p-3 rounded" style="background-color: rgba(255,255,255,0.1);">
                                                <i class="bi bi-info-circle-fill me-2"></i>@video.Detail
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
<style>
    .card.video-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #8181a3;
    }

        .card.video-card:hover {
            transform: translateY(-8px) scale(1.02);
            box-shadow: 0 8px 20px rgba(120, 120, 148, 0.4);
            background-color: #2a2a3d;
        }

        .card.video-card .card-text {
            opacity: 0;
            transform: translateY(10px);
            transition: opacity 0.5s ease, transform 0.5s ease;
        }

        .card.video-card:hover .card-text {
            opacity: 1;
            transform: translateY(0);
        }

</style>

