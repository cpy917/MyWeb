@{
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString() ?? "";
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString() ?? "";
    Func<string, string, string> isActive = (controller, action) =>
    {
        return (currentController == controller && currentAction == action) ? "active" : "";
    };
    Func<string[], string, string> isDropdownActive = (actions, controller) =>
    {
        return (currentController == controller && actions.Contains(currentAction)) ? "active" : "";
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MY Web</title>
    <link rel="stylesheet" href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="~/css/rwd.css" />
    <link rel="stylesheet" href="~/css/top.css" />
    <link rel="stylesheet" href="~/css/trail.css" />
    <link rel="stylesheet" href="~/css/time.css" />
    <link rel="stylesheet" href="~/css/luck.css" />
    <link rel="stylesheet" href="~/css/timeline.css" />
    <link rel="stylesheet" href="~/css/about.css" />
    <link rel="stylesheet" href="~/css/contact.css" />
    <link rel="stylesheet" href="~/css/photo.css" />
    <link rel="stylesheet" href="~/css/love.css" />
    <link rel="stylesheet" href="~/week15.styles.css" asp-append-version="true" />
</head>
<body >
    <header class="top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">企鵝的魚缸</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @isActive("Home", "Index")" asp-controller="Home" asp-action="Index">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @isActive("Home", "About")" asp-controller="Home" asp-action="About">關於</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @isActive("Home", "Lovesong")" asp-controller="Home" asp-action="Lovesong">分享</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @isActive("Home", "Contact")" asp-controller="Home" asp-action="Contact">聯絡我</a>
                        </li>

                        <li class="nav-item dropdown @isDropdownActive(new[] { "Project", "Video", "Photo", "Else" }, "Home")">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">企鵝選單</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item @isActive("Home", "Project")" asp-controller="Home" asp-action="Project">繪圖</a></li>
                                <li><a class="dropdown-item @isActive("Home", "Video")" asp-controller="Home" asp-action="Video">剪輯</a></li>
                                <li><a class="dropdown-item @isActive("Home", "Photo")" asp-controller="Home" asp-action="Photo">照片</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item @isActive("Home", "Else")" asp-controller="Home" asp-action="Else">其他</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <div style="height: 80px;"></div>
        </main>
       
    </div>
    <footer footer style=" position: fixed; bottom: 0; width: 100%; background-color: #222; color: white; text-align: center; padding: 1rem; z-index: 999;">
        <div class="container">
            &copy; 2025-5 - 企鵝工作室 - <a asp-area="" asp-controller="Home" asp-action="Contact">聯絡我</a>
        </div>
    </footer>
    <button type="button" id="BackTop" class="toTop-arrow"></button>

    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/top.js" asp-append-version="true"></script>
    <script src="~/js/trail.js" asp-append-version="true"></script>
    <script src="~/js/time.js" asp-append-version="true"></script>
    <script src="~/js/luck.js" asp-append-version="true"></script>
    <script src="~/js/tag.js" asp-append-version="true"></script>
    <script src="~/js/progress.js" asp-append-version="true"></script>
    <script src="~/js/love.js" asp-append-version="true"></script>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
